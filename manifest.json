{
  "manifest_version": 3,
  "name": "Disney Resort Dates Collector",
  "version": "2.0.0",
  "description": "Collects resort slug + check-in/out dates from disneyworld and logs them.",
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ]
}
